generator client {
  provider = "prisma-client-js"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Module {
  id          String    @id @default(cuid())
  name        String
  author      String
  description String?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  settings    Json
  words       Word[]
}

model Word {
  id         String   @id @default(cuid())
  word1      String
  word2      String
  progress   Progress @default(NEW)
  module     Module   @relation(fields: [moduleId], references: [id], onDelete: Cascade)
  moduleId   String
}

enum Progress {
  NEW
  STUDIED
  LEARNED
}

